<h1><%= @article.title %></h1>
  <p>
    <%= @article.atext %>
  </p>
  <%= form_for ([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br />
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %><br />
	</p>

	<% end %>
