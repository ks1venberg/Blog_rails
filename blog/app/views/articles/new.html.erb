<h1>New article</h1>

<%= form_for :article, url: '/articles' do |f| %>
	<!-- Analog - peremennaya v rails  	url: articles_path -->

	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %><br />
	</p>

<% end %>
